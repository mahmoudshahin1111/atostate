{
  "compilerOptions": {
    "target": "es2024",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"]
}
